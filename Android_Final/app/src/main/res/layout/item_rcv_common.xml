<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/layout_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Module ID: "
            android:textSize="14sp"
            android:typeface="serif" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:id="@+id/item">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn_view"
            android:src="@drawable/eye"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:layout_marginBottom="7dp"
            android:background="@drawable/background_eye"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn_edit"
            android:src="@drawable/pencil"
            android:scaleType="fitCenter"
            android:layout_marginBottom="7dp"
            android:background="@drawable/background_pencil"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn_delete"
            android:src="@drawable/remove"
            android:scaleType="fitCenter"
            android:background="@drawable/background_remove"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn_edit_fb"
            android:src="@drawable/edit_folder"
            android:scaleType="fitCenter"
            android:background="@drawable/background_edit"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>